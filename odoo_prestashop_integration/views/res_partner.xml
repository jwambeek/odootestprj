<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="prestashop_res_partner_form_view" model="ir.ui.view">
            <field name="name">Prestashop Res Partner Form View</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[last()]" position="after">
                    <page string="Prestashop Information" name="prestashop_information">
                        <group>
                            <group>
                                <field name="prestashop_customer_url" readonly="1"/>
                                <field name="prestashop_customer_id" readonly="1"/>
                                <field name="prestashop_store_id" readonly="1"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>